<% layout('layouts/boilerplate') %>

    <h1 class="section-title">Dashboard</h1>

    <div class="grid-2">


        <!-- Expenses Section -->
        <section>
            <div class="card glass">
                <h2>Add Expense Request</h2>
                <form action="/expenses" method="POST" class="form-group">
                    <div class="form-group">
                        <input type="text" name="description" placeholder="Description (e.g., Pizza Share)" required>
                    </div>
                    <div class="grid-2" style="gap: 1rem; margin-bottom: 1rem;">
                        <input type="number" name="amount" placeholder="Amount they owe you" step="0.01" min="0"
                            required>
                        <input type="text" name="username" placeholder="Friend's Username" required>
                    </div>
                    <button class="btn btn-primary" style="width: 100%;" type="submit">Send Request</button>
                </form>

                <div style="margin-top: 2rem;">
                    <h3>My Active Expenses</h3>
                    <ul class="list-group">
                        <% if (expenses.length> 0) { %>
                            <% expenses.forEach(expense=> { %>
                                <li class="list-item">
                                    <div class="expense-info">
                                        <div class="expense-title">
                                            <%= expense.description %>
                                        </div>
                                        <div class="expense-details">
                                            <% if (expense.payer._id.equals(currentUser._id)) { %>
                                                <!-- I Paid -->
                                                <span class="badge"
                                                    style="background: rgba(74, 222, 128, 0.2); color: #86efac;">
                                                    You lent $<%= expense.amount %> to <%= expense.recipient ?
                                                            expense.recipient.username : 'Unknown' %>
                                                </span>
                                                <% } else { %>
                                                    <!-- They Paid -->
                                                    <span class="badge"
                                                        style="background: rgba(239, 68, 68, 0.2); color: #fca5a5;">
                                                        You owe $<%= expense.amount %> to <%= expense.payer ?
                                                                expense.payer.username : 'Unknown' %>
                                                    </span>
                                                    <% } %>
                                        </div>
                                    </div>
                                    <% if (expense.payer._id.equals(currentUser._id)) { %>
                                        <form action="/expenses/delete/<%= expense.id %>" method="POST"
                                            style="display:inline;">
                                            <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                        <% } %>
                                </li>
                                <% }) %>
                                    <% } else { %>
                                        <li class="list-item" style="justify-content: center; color: #94a3b8;">
                                            No active expenses.
                                        </li>
                                        <% } %>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <div style="margin-top: 2rem; text-align: center;">
        <form action="/reset" method="POST" style="display: inline-block;">
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to clear all data?');">Reset
                All Data</button>
        </form>
    </div>