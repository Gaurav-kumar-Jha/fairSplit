<% layout('layouts/boilerplate') %>

    <div class="card glass" style="max-width: 500px; margin: 0 auto;">
        <h1 class="section-title" style="text-align: center;">Register</h1>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="btn btn-primary" style="width: 100%;">Sign Up</button>
        </form>
        <div style="margin-top: 1rem; text-align: center;">
            <a href="/login" style="color: #cbd5e1;">Already have an account? Login</a>
        </div>
    </div>