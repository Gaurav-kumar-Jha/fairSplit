<% layout('layouts/boilerplate') %>

    <div class="card glass" style="max-width: 500px; margin: 0 auto;">
        <h1 class="section-title" style="text-align: center;">Login</h1>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.2); border: 1px solid #dc3545; color: #ffadad; padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1rem; text-align: center;">
                <%= error %>
            </div>
        <% } %>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="btn btn-primary" style="width: 100%;">Login</button>
        </form>
        <div style="margin-top: 1rem; text-align: center;">
            <a href="/register" style="color: #cbd5e1;">Need an account? Sign Up</a>
        </div>
    </div>